<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.HelloController" styleClass="table" hgap="20" vgap="20">

        <TextArea fx:id="inputText" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3" />



        <Button text="Start" onAction="#onStartButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="btn-success"/>
        <Button text="Stop" onAction="#onStopButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="btn-danger"/>

    <Button text="Up" onAction="#increaseNumberOfWords" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="btn-success"/>
    <Label fx:id="txtNumOfWords" text="Number of Words per glance: 3" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="1"/>
    <Button text="Down" onAction="#decreaseNumberOfWords" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="btn-danger"/>

    <Button text="Up" onAction="#increaseWpm" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="btn-success"/>
    <Label fx:id="txtWordsPerMinute" text="Words Per Minute: 60" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="4"/>
    <Button text="Down" onAction="#decreaseWpm" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="btn-danger"/>

    <Label fx:id="currentText" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="3" styleClass="h2"/>


</GridPane>
